{
  "name": "app",
  "type": "module",
  "version": "0.0.50",
  "private": true,
  "scripts": {
    "test": "bun run ./src/utils/env.ts",
    "dev": "PORT=$SYNC_SERVER_PORT bun run --watch ./src/index.ts",
    "build": "bun run ./src/utils/env.ts && bun build --minify-whitespace --minify-syntax --target bun --outdir ./dist --sourcemap ./src/index.ts",
    "start": "bun run ./dist/index.js",
    "format": "prettier --write ./src",
    "lint": "eslint --fix ./src"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/server-timing": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@libsql/client": "^0.15.15",
    "@tanstack/solid-query-devtools": "^5.91.0",
    "arktype": "^2.1.27",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.16",
    "ethers": "^6.15.0",
    "hlc": "workspace:*",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "typescript-eslint": "^8.47.0",
    "@dword-design/eslint-plugin-import-alias": "^6.0.3",
    "bun-types": "^1.3.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "prettier": "^3.6.2"
  },
  "module": "src/index.js"
}
