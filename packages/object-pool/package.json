{
  "name": "object-pool",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": "Raqueebuddin Aziz",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*/index.d.ts",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --out-dir ./dist",
    "dev": "npm run build -- --watch src",
    "lint": "eslint --fix src",
    "format": "prettier --write src"
  },
  "devDependencies": {
    "@types/node": "latest",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.15.3",
    "typescript": "^5"
  }
}
