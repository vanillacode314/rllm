{
  "name": "proto",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "npm run proto:generate && tsdown --out-dir ./dist",
    "proto:generate": "buf generate",
    "dev": "npm run build -- --watch src",
    "lint": "eslint --fix src",
    "format": "prettier --write src"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@bufbuild/buf": "^1.61.0",
    "@bufbuild/protobuf": "^2.10.1",
    "@bufbuild/protoc-gen-es": "^2.10.1"
  }
}
